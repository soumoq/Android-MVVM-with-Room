<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/welcomeS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Sign Up"
            android:textColor="#000000"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/enterVia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcomeS"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Please sign up to continue using app" />


        <TextView
            android:id="@+id/enterProcess1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcomeS"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="Enter via social network" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/enterProcess1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/main_activity_button_google" />


        <TextView
            android:id="@+id/enterViaSocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_in_button1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="or sign up with phone" />

        <EditText
            android:id="@+id/phone_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enterViaSocal"
            android:layout_margin="20dp"
            android:background="@drawable/explore_search_style"
            android:fontFamily="serif"
            android:hint="Phone"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_edit_text"
            android:layout_margin="20dp"
            android:background="@drawable/explore_search_style"
            android:fontFamily="serif"
            android:hint="Password"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/sign_up_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_edit_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/main_activity_button"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#FDFEFE" />


    </RelativeLayout>
</ScrollView>